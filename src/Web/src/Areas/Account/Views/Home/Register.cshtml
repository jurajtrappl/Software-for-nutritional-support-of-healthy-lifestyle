@inject IViewLocalizer Localizer
@model RegistrationModel

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container justify-content-center fullHeight">
    <div class="row heightInherit">
        <div class="col-md-6 col-xs-12 d-flex align-items-center">
            @(await Component.InvokeAsync<ImageViewComponent>(
                new { path = "/img/signUp.png", alt = "Sign up" }))
        </div>
        <div class="col-md-6 col-xs-12 d-flex align-items-center justify-content-center">
            <div>
                <h1 class="display-4 text-center fontBold paddingDelimiter15">
                    @Localizer["CreateNewAccount"]
                </h1>
                @using (Html.BeginForm())
                {
                    <div class="form-row">
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.FirstName,
                                Localizer["FirstName"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.FirstName,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "text" })
                            <div>
                                @Html.ValidationMessageFor(
                                    model => model.FirstName,
                                    null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.LastName,
                                Localizer["LastName"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.LastName,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "text" })
                            <div>
                                @Html.ValidationMessageFor(
                                    model => model.LastName,
                                    null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.Username,
                                Localizer["Username"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.Username,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "text" })
                            <div>
                                @Html.ValidationMessageFor(
                                    model => model.Username,
                                    null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.Email,
                                Localizer["EmailAddress"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.Email,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "email" })
                            <div>
                                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.NewPassword,
                                Localizer["Password"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.NewPassword,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "password" })
                            <div>
                                @Html.ValidationMessageFor(
                                    model => model.NewPassword,
                                    null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6 col-xs-12">
                            @Html.LabelFor(
                                model => model.ConfirmPassword,
                                Localizer["ConfirmPassword"].Value,
                                new { @class = "fontLarger fontLight" })
                            @Html.TextBoxFor(
                                model => model.ConfirmPassword,
                                null,
                                new { @class = "form-control form-control-lg fontLight", type = "password" })
                            <div>
                                @Html.ValidationMessageFor(
                                    model => model.ConfirmPassword,
                                    null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <span class="text-danger">
                        @Html.ValidationSummary(true)
                    </span>
                    <div class="text-center paddingDelimiter15">
                        <button type="submit"
                                class="btn btn-lg bgRoyalOrange">
                            @Localizer["SignUp"]
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>