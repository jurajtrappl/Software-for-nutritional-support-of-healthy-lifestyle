@using Application.Web.Views.Shared.Components
@model ModalViewModel

<div class="modal fade"
     id="@Model.Id"
     tabindex="-1"
     role="dialog"
     aria-labelledby="@Model.LabelId"
     aria-hidden="true">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"
                    id="@Model.LabelId">
                </h2>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div id="@Model.BodyId"
                     class="@Model.BodyClass">
                </div>
            </div>
        </div>
    </div>
</div>