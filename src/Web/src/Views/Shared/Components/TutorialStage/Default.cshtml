@using Application.Web.Views.Shared.Components
@model TutorialStageViewModel

<div class="col-md-6 col-xs-12 d-flex align-items-center">
    <div>
        <h1 class="display-4 paddingDelimiter15">
            @Model.OrderNum. @Model.Localizer[Model.Name]
        </h1>
        <p class="fontLarger paddingDelimiter15">
            @Model.Localizer[Model.Name + "Description"]
        </p>
    </div>
</div>
<div class="col-md-6 col-xs-12 align-items-end">
    @(await Component.InvokeAsync<ImageViewComponent>(
        new { path = Model.ImgPath, alt = Model.ImgAlt }))
</div>